<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Udemy_Xamarin_Course.Layouts.LoginPageGridLayout"
             BackgroundColor="#127ac7">
    <ContentPage.Content>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" VerticalOptions="Center">
                <Label Text="Welcome to Xamarin Forms" HorizontalTextAlignment="Center"
                   TextColor="White" FontSize="30" FontAttributes="Bold" />
                <Label Text="Cross-platform apps made easy!" HorizontalTextAlignment="Center"
                   TextColor="White" FontSize="18"/>
            </StackLayout>
            <Button Text="Login" BackgroundColor="#1dabf0" HorizontalOptions="Fill"
                    TextColor="White" Margin="0, 12, 0, 0" Grid.Row="1"/>
            <Button Text="Register" BackgroundColor="#1dabf0" HorizontalOptions="Fill"
                    TextColor="White" Margin="0, 12, 0, 0" Grid.Row="2"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>